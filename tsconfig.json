{
  "extends": "@tsconfig/create-react-app/tsconfig.json",

  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "files": true,

    "compilerOptions": {
      "target": "es2020",
      "lib": ["es2020"],

      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,

      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    }
  },

  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "noEmit": false,

    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",

    "outDir": ".dist",

    "baseUrl": "src",

    "paths": {
      "@storyset":   ["."],
      "@storyset/*": ["./*"],

      "@Props":      ["Props/"],
      "@Props/*":    ["Props/*"],

      "@Theme":      ["Theme/"],
      "@Theme/*":    ["Theme/*"],

      "@Types":      ["Types/"],
      "@Types/*":    ["Types/*"],

      "@Utils":      ["Utils/"],
      "@Utils/*":    ["Utils/*"]
    }
  },

  "include": [
    "src/**/*.ts*"
  ],

  "exclude": [
    "node_modules"
  ]
}
